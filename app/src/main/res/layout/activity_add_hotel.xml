<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tourisimbangla.tourbangla.add_hotel"
    android:background="@drawable/abc_btn_borderless_material">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Hotel Info"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/material_deep_teal_200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GPS Co-ordination captured."
            android:id="@+id/lblAddHotelGPS"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingAddHotel"
                android:layout_gravity="center"
                android:stepSize="1"
                android:numStars="5"
                android:rating="4" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddHotelImage"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_menu_gallery"
                android:tint="@android:color/holo_blue_bright"
                android:tintMode="multiply" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:background="@drawable/abc_btn_borderless_material">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddHotelName"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:hint="Name of the Hotel"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddHotelPricingDesc"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:hint="Pricing Description"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddHotelAddress"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:hint="Address"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_gravity="center_horizontal"
            android:hint="Contact"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtAddHotelWebsite"
            android:layout_gravity="center_horizontal"
            android:hint="Website"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btnAddHotelSubmit"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/holo_blue_dark" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/btnAddHotelCancel"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
