<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.tourisimbangla.tourbangla.SpotBasicInfo">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Omiakhum"
        android:id="@+id/lblSpotInfoTitle"
        android:textSize="40dp"
        android:textIsSelectable="false"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Waterfall"
                android:id="@+id/lblSpotInfoCatagory" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnSpotInfoShowMap"
                android:src="@drawable/location"
                android:layout_weight="1"
                android:foregroundTint="@color/material_deep_teal_200"
                android:foregroundTintMode="multiply"
                android:background="@null"
                android:tint="@android:color/holo_red_light" />

        </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingSpotInfo"
            android:numStars="5"
            style="?android:attr/ratingBarStyle"
            android:rating="3"
            android:stepSize="1"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnSpotInfoImgBack"
            android:src="@android:drawable/ic_media_previous"
            android:background="@null"
            android:tint="@color/material_deep_teal_200" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imgSpotInfoMain"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnSpotInfoImgForward"
            android:src="@android:drawable/ic_media_next"
            android:background="@null"
            android:tint="@color/material_deep_teal_200" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/abc_btn_borderless_material">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Omiyakhum is a great place for tourists in economy budget"
                        android:id="@+id/lblSpotInfoDescription"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSpotInfoEditDesc"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_gravity="top"
                        android:background="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abc_btn_borderless_material">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="How to go?"
                        android:id="@+id/textView4"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSpotInfoEditHowtogo"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_gravity="top"
                        android:background="@null" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Buy a bus Ticket, hire a taxi, go from here to there"
                    android:id="@+id/lblSpotInfoHowToGo"
                    android:layout_marginLeft="15dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abc_btn_borderless_material">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Security Issues"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSpotInfoEditSecurityInfo"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_gravity="top"
                        android:background="@null" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Don&apos;t go near the riverside after 8PM. Don&apos;t eat from strangers"
                    android:id="@+id/lblSpotInfoSecurityIssue"
                    android:layout_marginLeft="15dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSpotInfoAccommodation"
            android:layout_weight="1"
            android:foregroundTintMode="multiply"
            android:foregroundTint="@color/material_deep_teal_200"
            android:src="@drawable/home1"
            android:tint="@android:color/holo_blue_dark" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/btnSpotInfoReview"
            android:layout_weight="1"
            android:src="@android:drawable/sym_action_chat"
            android:tint="@color/highlighted_text_material_light" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSpotInfoPicture"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_gallery"
            android:foregroundTint="@color/material_deep_teal_200"
            android:foregroundTintMode="multiply"
            android:tint="@android:color/holo_green_dark"
            android:tintMode="multiply" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/btnSpotInfoNearby"
            android:layout_weight="1"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:tint="@android:color/holo_orange_dark" />
    </LinearLayout>

</LinearLayout>
